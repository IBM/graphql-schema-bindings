{
  "name": "graphql-schema-bindings",
  "version": "0.11.6",
  "description": "an opinionated graphql server format for combining schema and implementation",
  "repository": {
    "type": "github",
    "url": "https://github.com/IBM/graphql-schema-bindings"
  },
  "author": "Cory Cook",
  "contributors": [
    "Zack Grossbart <zack@grossbart.com>"
  ],
  "license": "SEE LICENSE IN LICENSE",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "precommit": "lint-staged",
    "prepare": "tsc",
    "test": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.11",
    "@types/supertest": "^2.0.9",
    "acorn": "^7.2.0",
    "apollo-server-express": "^2.14.2",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "express": "^4.17.1",
    "extend": "3.0.2",
    "graphql": "^15.1.0",
    "handlebars": "^4.7.7",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "lint-staged": "^10.2.9",
    "lodash": "^4.17.21",
    "minimist": "^1.2.5",
    "node-fetch": ">=2.6.1",
    "object-path": "^0.11.8",
    "prettier": "^2.0.5",
    "set-value": "^4.1.0",
    "supertest": "^4.0.2",
    "ts-jest": "^27.0.6",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "peerDependencies": {
    "graphql": ">=15.1.0"
  }
}
