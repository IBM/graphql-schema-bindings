{
  "name": "graphql-schema-bindings",
  "version": "0.12.0",
  "description": "an opinionated graphql server format for combining schema and implementation",
  "repository": {
    "type": "github",
    "url": "https://github.com/IBM/graphql-schema-bindings"
  },
  "author": "Cory Cook",
  "contributors": [
    "Zack Grossbart <zack@grossbart.com>",
    "Guan Jun-Ming <gjunming@gmail.com>"
  ],
  "license": "SEE LICENSE IN LICENSE",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "precommit": "lint-staged",
    "prepare": "tsc",
    "test": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "devDependencies": {
    "@apollo/server": "^4.5.0",
    "@types/chai": "^4.3.4",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.4",
    "@types/node": "^18.15.3",
    "@types/supertest": "^2.0.12",
    "acorn": "^8.8.2",
    "body-parser": "^1.20.2",
    "chai": "^4.3.7",
    "cors": "^2.8.5",
    "coveralls": "^3.1.1",
    "express": "^4.18.2",
    "extend": "^3.0.2",
    "handlebars": "^4.7.7",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "node-fetch": "^3.3.1",
    "object-path": "^0.11.8",
    "prettier": "^2.8.4",
    "set-value": "^4.1.0",
    "supertest": "^6.3.3",
    "supertest-graphql": "^1.1.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "peerDependencies": {
    "graphql": "^16.6.0"
  }
}
